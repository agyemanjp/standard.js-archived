{
	"compilerOptions": {
		"target": "ES2015",
		"module": "commonjs",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ScriptHost",
			"ES5",
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"ESNext",
			"ES2018.Promise",
			"ES2018.AsyncIterable"
		],
		"keyofStringsOnly": true,
		"suppressImplicitAnyIndexErrors": true,
		"strict": true,
		"rootDirs": [
			"./src",
		],
		"outDir": "./dist",
		"noEmitOnError": true,
		"declaration": true
	},
	"include": [
		"src"
	]
}