{
	"name": "@agyemanjp/standard",
	"version": "2.0.2",
	"description": "Standard library for JavaScript/TypeScript",
	"main": "index.js",
	"types": "index.d.ts",
	"files": [
		"/*",
		"!*.tsbuildinfo"
	],
	"scripts": {
		"setup": "rm -rf ./node_modules package-lock.json && npm install",
		"clean": "rm -rf dist/* .eslintcache *-report.json",
		"lint": "eslint --ext ts --cache src/*",
		"lint-report": "eslint --ext ts --output-file .lint-report.json --format json-standard --cache src/*",
		"compile": "tsc",
		"test": "mocha test/*.test.mjs",
		"test-report": "mocha test/*.test.mjs --reporter mocha-reporter-json-standard >| .test-report.json",
		"build": "npm run clean && npm run lint && npm run compile && npm run test",
		"package": "git add . && git commit -m 'Update' && git push && npm version patch && git push --follow-tags && cp package.json README.md dist && npm publish --dry-run"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Hypothesize/standard.js.git"
	},
	"keywords": [],
	"contributors": [
		{
			"name": "James Prempeh"
		},
		{
			"name": "Arthur Plouet"
		},
		{
			"name": "Diego Cisneros"
		}
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Hypothesize/standard.js/issues"
	},
	"homepage": "https://github.com/Hypothesize/standard.js#readme",
	"dependencies": {
		"request": "^2.88.2"
	},
	"devDependencies": {
		"@hutsoninc/flatten-dir-cli": "^1.0.2",
		"@types/eslint": "^7.2.0",
		"@types/mocha": "^7.0.2",
		"@types/node": "^14.0.4",
		"@types/request": "^2.48.5",
		"@types/source-map-support": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "3.4.0",
		"@typescript-eslint/parser": "3.4.0",
		"eslint": "^7.3.1",
		"eslint-formatter-json-standard": "^1.0.0",
		"eslint-plugin-fp": "2.3.0",
		"mocha": "^7.1.1",
		"mocha-reporter-json-standard": "^1.0.0",
		"source-map-support": "^0.5.19",
		"typescript": "^3.9.3"
	}
}